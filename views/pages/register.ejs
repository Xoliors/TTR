    <script>
        // Escucha el cambio en el campo de archivo
        document.getElementById('profilePic').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                // Crea un objeto FileReader para leer la imagen
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('profilePicPreview');
                    const container = document.getElementById('profilePicContainer');
                    // Muestra la imagen en el contenedor
                    preview.src = e.target.result;
                    container.style.display = 'block'; // Asegúrate de mostrar el contenedor
                };
                reader.readAsDataURL(file); // Lee la imagen como una URL de datos
            }
        });
        // Escucha el clic en el botón de eliminar imagen
        document.getElementById('removeProfilePic').addEventListener('click', function() {
            // Borra la imagen y oculta el contenedor
            document.getElementById('profilePicPreview').src = '';
            document.getElementById('profilePicContainer').style.display = 'none';
            // Borra el archivo seleccionado (resetea el input)
            document.getElementById('profilePic').value = '';
        });
    </script>
