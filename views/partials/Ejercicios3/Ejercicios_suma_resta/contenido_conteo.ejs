                <button class="boton-eliminar" onclick="eliminarElemento('recuadro5')">Eliminar elemento</button>
            </div>
        </div>
    </div>

    <div class="boton">
        <button id="verificarBtn" onclick="verificar()">Verificar respuestas</button>
    </div>

    <div class="mensaje" id="mensaje"></div>

    <div class="boton">
        <button id="intentarBtn" class="boton-intentar" onclick="reiniciar()">Intentar de nuevo</button>
