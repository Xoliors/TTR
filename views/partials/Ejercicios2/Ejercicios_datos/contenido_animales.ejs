            <input id="total-vainilla" data-preg="vainilla">
            <input id="total-frutilla" data-preg="frutilla">
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div style="text-align:center;">
    <button class="bn" onclick="verificar()" id="btn-verificar">Verificar</button>
    <button class="bn" id="btn-intentar" style="display: none;" onclick="intentarDeNuevo()">Intentar de nuevo</button>
    <div id="resultado"></div>
  </div>
