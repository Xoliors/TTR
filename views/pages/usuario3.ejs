    <script>
    window.addEventListener('load', () => {
    const title = document.querySelector('.page-header h3');
    const breadcrumb = document.querySelector('.page-header .d-inline-flex');
    
    // Animar título entrada
    title.style.opacity = '1';
    title.style.transform = 'translateY(0)';
    
    // Animar breadcrumb entrada un poco después
    setTimeout(() => {
      breadcrumb.style.opacity = '1';
      breadcrumb.style.transform = 'translateX(0)';
    }, 500);
    
    // Después de la animación inicial, empezar efecto pulse repetitivo
    setTimeout(() => {
      let growing = true;
      setInterval(() => {
        if (growing) {
          title.style.transform = 'scale(1.05)';
          title.style.textShadow = '2px 2px 8px rgba(255, 255, 255, 0.8)';
        } else {
          title.style.transform = 'scale(1)';
          title.style.textShadow = '2px 2px 5px rgba(0,0,0,0.3)';
        }
        growing = !growing;
      }, 1500); // cada 1.5 segundos alterna
    }, 1500); // espera que termine animación de entrada para iniciar
  });
</script>
